<div class="row">
	<div class="col-md-4">
	<%= image_tag @movie.avatar.url(:medium) %>
	</div>
	<div class="col-md-8">
	<h1><%= @movie.title %></h1>
	<h4><strong>Derector: </strong><%= @movie.director %></h4>
	<p><strong>Running Time: </strong><%= @movie.movie_length %> </p>
	<p><%= simple_format(@movie.description) %></p>
</div>
	<div>
	<% if current_user && current_user.has_favorited?(@movie) %>
	<%= link_to(content_tag(:i, "取消收藏", class: "fa fa-heart"), unfavorite_movie_path(@movie), method: :post, class: "btn btn-sm btn-success") %>
	<% else %>
		<%= link_to(content_tag(:i, "立即收藏", class: "fa fa-heart-o"), favorite_movie_path(@movie), method: :post, class: "btn btn-sm btn-danger") %>
	<% end %>
	</div>

</div>
<div>
<%= link_to("Home", movies_path) %>
<% if current_user && current_user == @movie.user %>
<%= link_to("Edit", edit_movie_path(@movie)) %>
<%= link_to("Destroy", movie_path(@movie), method: :delete, data: {confirm: "Are you sure?"}) %>
<% end %>
</div>