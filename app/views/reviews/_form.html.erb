<%= simple_form_for([@movie, @movie.reviews.build]) do |f|%>
	<div class="ratyrate">
		<p>
		<%= @movie.title %> 评分：
		<span style="display: inline-block;"><%= rating_for @movie, 'color', disable_after_rate: true, cancel: true, star_path: '/ratyrate' %></span>
		<span style="display: inline-block;"><%= rating_for @movie, 'taste', disable_after_rate: true, cancel: true, star_path: '/ratyrate' %></span><br>
		<span style="display: inline-block;"><%= rating_for @movie, 'shape', disable_after_rate: true, cancel: true, star_path: '/ratyrate' %></span>
		</p>
	</div>
  <div class="field">
      <%= f.text_area :comment, class: "form-control" %>
  </div><br>

  <%= f.submit "发表影评", class: "btn btn-primary" %>
<% end %>